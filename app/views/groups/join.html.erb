        <%= form_with url: join_group_path, method: :post do %>
            <div class="form-group">
                <%= label_tag :group_code, "Gruppen-Code", class: "form-label" %>
                <%= text_field_tag :group_code, nil, class: "form-control" %>
            </div>

            <div class="form-buttons">
                <%= submit_tag 'Gruppe beitreten', class: "custom-btn btn-primary" %>
                <%= link_to 'ZurÃ¼ck zur Startseite', home_path, class: "custom-btn btn-secondary" %>
            </div>
        <% end %>

    </div>

</body>
</html>
